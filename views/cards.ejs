<%- include('header') -%>
<div
  class="rounded bg-light  "
  style="
    height: 5rem;
    text-align: center;
    font-size: 3rem;
    font-weight: 500;
  "
  id="players"
>
<h2 style="box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.159); color: rgb(110, 110, 110); font-weight: lighter;" class= "my-3 pb-3">Specifications</h2>
  
</div>
<div class="container-fluid">
  <div class="row" style="justify-content: center">
    <% for(x of laps) {%>
    <div class="card border border-light m-3 col-md-3 shadow p-3 mb-5 bg-white rounded" style="width: 20rem">
      <img src="<%= x.image %>" class="card-img-top rounded" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= x.name %></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Processor: <%=x.processor %></li>
        <li class="list-group-item">Display : <%=x.display %></li>
        <li class="list-group-item">OS : <%=x.os %></li>
        <li class="list-group-item">Memory : <%=x.memory %></li>
        <li class="list-group-item">Graphics Processor : <%=x.graphics %></li>
        <li class="list-group-item">Body : <%=x.body %></li>
        <li class="list-group-item">Price : <%=x.price %></li>
      </ul>
      <div class="card-body">
        <a href="<%=x.link %>" class="card-link">Visit site</a>
      </div>
    </div>
    <% } %>
  </div>
</div>
<%- include('footer') -%>